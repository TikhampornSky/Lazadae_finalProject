<h1> My Market Page </h1>

<p> User ID: <%= @user_id %> </p>

<table id='myMarket_table'>
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Picture</th>
            <th>Price</th>
            <th>Current Stock</th>
            <th><b>Number that want to buy</b></th>
            <th>Buy</th>
        </tr>
    </thead>
  
    <tbody>
        <% @myItem.each do |item| %>
            <tr>
                <td> <%= item.name %> </td>
                <td> <%= item.category %> </td>
                <td> 
                    <% if item.picture.attached? %> 
                        <%= image_tag item.picture.variant(:thumb) %>
                    <% end %>
                </td>
                <td> <%= Market.where(item_id: item.id).first.price %> </td>
                <td> <%= Market.where(item_id: item.id).first.stock %> </td>

                <% if (session[:logged_in] == true) %>
                    <%= form_with url: "/search", method: :get do |form| %>
                        <td>
                            <%= form.number_field :buying %>
                        </td>
                        <td> 
                            <%= form.submit "BUY", class:"btn btn-info" %> 
                        </td>
                    <% end %>
                <% end %>
            </tr>
        <% end %>
    </tbody>

</table>

<style>
    table, th, td {
        border: 1px solid;
    }
</style>

<script> 
    $(document).ready( function () {
       $('#myMarket_table').DataTable();
    });
</script>